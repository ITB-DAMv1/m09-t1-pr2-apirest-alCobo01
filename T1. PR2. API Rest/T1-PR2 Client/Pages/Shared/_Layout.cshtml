<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITBGameJam 2025</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/T1_PR2_Client.styles.css" asp-append-version="true" />
	<link href="~/css/chat.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-custom">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <i class="bi bi-controller" style="margin-right:.5rem;"></i>
                    ITB GameJam 2025
                </a>
                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false"
                        aria-label="Mostrar menú">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">Games list</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/UsersChat">Chat</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto mb-2 mb-sm-0">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item d-flex align-items-center">
                                <span class="nav-link px-2">Hello, @User.Identity.Name!</span>
                                <form method="post" asp-page="/Logout" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-light">
                                        Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-fill">
        <main role="main" class="py-4 flex-fill">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3 text-center text-muted border-top">
        <div class="container">
            Developed by Alvaro Cobo | DAMv1 2025
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
